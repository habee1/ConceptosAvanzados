<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#00BFFF">

    <TextView
        android:text="Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Correo"
        android:textSize="28sp"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="23dp"
        android:id="@+id/correo_para"
        android:hint="Para"
        android:layout_below="@+id/Correo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/correo_para"
        android:id="@+id/correo_asunto"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Asunto" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/correo_asunto"
        android:id="@+id/correo_escribir"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:hint="Escribir Correo" />

    <Button
        android:text="Enviar Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correo_enviar"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/correo_escribir"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />
</RelativeLayout>